<div class="cute-container">
  <h2>Cadastro de Pesquisador</h2>

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@user, url: create_researcher_registration_path) do |f| %>
    <div class="mb-3">
      <%= f.fields_for :researcher do |researcher_fields| %>
        <div class="mb-3">
          <%= researcher_fields.label :name, class: "form-label" %>
          <%= researcher_fields.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= researcher_fields.label :phone_number, class: "form-label" %>
          <%= researcher_fields.text_field :phone_number, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= researcher_fields.label :academic_field, class: "form-label" %>
          <%= researcher_fields.text_field :academic_field, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= researcher_fields.label :cv_link, class: "form-label" %>
          <%= researcher_fields.text_field :cv_link, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= researcher_fields.label :orcid_id, class: "form-label" %>
          <%= researcher_fields.text_field :orcid_id, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= researcher_fields.label :academic_title, class: "form-label" %>
          <%= researcher_fields.text_field :academic_title, class: "form-control" %>
        </div>

        <%= researcher_fields.fields_for :address do |address_fields| %>
          <div class="mb-3">
            <%= address_fields.label :street, class: "form-label" %>
            <%= address_fields.text_field :street, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= address_fields.label :district, class: "form-label" %>
            <%= address_fields.text_field :district, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= address_fields.label :complement, class: "form-label" %>
            <%= address_fields.text_field :complement, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= address_fields.label :postal_code, class: "form-label" %>
            <%= address_fields.text_field :postal_code, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= address_fields.label :city, class: "form-label" %>
            <%= address_fields.text_field :city, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= address_fields.label :state, class: "form-label" %>
            <%= address_fields.text_field :state, class: "form-control" %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.submit 'Cadastrar', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

