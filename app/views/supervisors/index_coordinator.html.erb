<h2>Lista de Coordenadores</h2>

<table>
  <thead>
  <tr>
    <th><%= Researcher.human_attribute_name("name") %></th>
    <th><%= User.human_attribute_name("email") %></th>
    <th>Status</th>
    <th>Ação</th>
  </tr>
  </thead>
  <tbody>
  <% @coordinators.each do |coordinator| %>
    <tr>
      <td><%= coordinator.name %></td>
      <td><%= coordinator.user.email %></td>
      <td><%= coordinator.user.active? ? 'Ativo' : 'Inativo' %></td>
      <td>
        <%= link_to "Visualizar dados", coordinator_path(coordinator) %>
        <% if coordinator.user.active? %>
          <%= button_to "Desativar usuário", deactivate_coordinator_path(coordinator), method: :patch %>
        <% else %>
          <%= button_to "Ativar usuário", activate_coordinator_path(coordinator), method: :patch %>
        <% end %>
        <br />
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Voltar', root_path %>
