<div class="container w-25">
  <% if notice.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% notice.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: notice, class: "mt-3" do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label fw-bold" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :start_date, class: "form-label fw-bold" %>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :end_date, class: "form-label fw-bold" %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.submit 'Salvar', class: "btn btn-success" %>
      <%= link_to 'Voltar', notices_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
